doctype html
html(lang="en") 
	head 
		meta(charset="UTF-8") 
		meta(http-equiv="X-UA-Compatible", content="IE=edge") 
		meta(name="viewport", content="width=device-width, initial-scale=1.0") 
		title Zoom 
		link(rel="stylesheet", href="https://unpkg.com/mvp.css") 
	body 
		header 
			h1 Zoom 
		main
			div#welcome
				form
					label(for="nameInput") 닉네임
					input#nameInput(placeholder="nick name", required, type="text")
					label(for="roomInput") 방이름
					input#roomInput(placeholder="room name", required, type="text")
					button Enter Room					
			div#room
				h3
				ul
				form
					input(placeholder="message", required, type="text")
					button Send
		
		script(src="/socket.io/socket.io.js")
		script(src="/public/js/app.js")  		